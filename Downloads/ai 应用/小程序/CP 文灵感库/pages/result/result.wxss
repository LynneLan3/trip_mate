.container {
  min-height: 100vh;
  background-color: #f2f2f7;
  padding-bottom: calc(180rpx + env(safe-area-inset-bottom));
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #8e8e93;
  font-size: 28rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 32rpx;
  text-align: center;
}

.error-container text {
  color: #8e8e93;
  margin: 24rpx 0;
  font-size: 28rpx;
}

/* 故事内容 */
.story-container {
  padding: 32rpx 32rpx 0;
}

.story-header {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
  text-align: center;
}

.meta {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.type, .style {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.type {
  background: rgba(0, 122, 255, 0.1);
  color: #007aff;
}

.style {
  background: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

.story-content {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  max-height: calc(100vh - 400rpx);
}

.story-content text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #000000;
  white-space: pre-wrap;
  display: block;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.primary-actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.action-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: none;
  color: #007aff;
  border: 1rpx solid #007aff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.action-btn::after {
  display: none;
}

.back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #007aff;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.back-btn::after {
  display: none;
}

/* 分享菜单 */
.share-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.share-menu.show {
  visibility: visible;
  opacity: 1;
}

.share-menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.share-menu-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.share-menu.show .share-menu-content {
  transform: translateY(0);
}

.share-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
}

.share-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.share-btn {
  min-width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: none;
  color: #007aff;
  border: 1rpx solid #007aff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.share-btn::after {
  display: none;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f2f2f7;
  color: #007aff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.cancel-btn::after {
  display: none;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #000000;
  }

  .story-header {
    background: #1c1c1e;
  }

  .title {
    color: #ffffff;
  }

  .story-content {
    background: #1c1c1e;
  }

  .story-content text {
    color: #ffffff;
  }

  .action-bar {
    background: #1c1c1e;
  }

  .share-menu-content {
    background: #1c1c1e;
  }

  .cancel-btn {
    background: #2c2c2e;
  }
}
