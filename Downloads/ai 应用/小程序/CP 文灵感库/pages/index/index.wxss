.container {
  min-height: 100vh;
  background: #f2f2f7;
  padding: 32rpx;
  box-sizing: border-box;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  color: #000000;
  margin-bottom: 24rpx;
}

.input-group {
  display: flex;
  gap: 24rpx;
}

.input {
  flex: 1;
  height: 88rpx;
  background: #f2f2f7;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #000000;
}

.tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: -8rpx;
}

.tag {
  padding: 16rpx 24rpx;
  background: #f2f2f7;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #000000;
  min-width: 120rpx;
  text-align: center;
  transition: all 0.2s;
}

.tag.selected {
  background: #007aff;
  color: #ffffff;
}

.submit-section {
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #007aff;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.submit-btn::after {
  display: none;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-content {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 48rpx;
  text-align: center;
  width: 80%;
  max-width: 600rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #000000;
  margin-bottom: 16rpx;
  display: block;
}

.loading-tips {
  font-size: 28rpx;
  color: #8e8e93;
  display: block;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #000000;
  }

  .section {
    background: #1c1c1e;
  }

  .section-title {
    color: #ffffff;
  }

  .input {
    background: #2c2c2e;
    color: #ffffff;
  }

  .tag {
    background: #2c2c2e;
    color: #ffffff;
  }

  .tag.selected {
    background: #0a84ff;
  }

  .loading-content {
    background: #1c1c1e;
  }

  .loading-text {
    color: #ffffff;
  }
}
